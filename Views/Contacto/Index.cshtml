@model App2demo.ViewModel.ContactoViewModel;

@{
    ViewData["Title"] = "Contacto";
}

<div class="container">
    <h1 class="text-center mb-4">Formulario de contacto</h1>
    <div class="row justify-content-center">
        <div class="col-md-6">
            <form asp-controller="Contacto" asp-action="Enviar" method="post">
                <div class="form-group">
                    <label asp-for="FormContacto.Name" class="control-label"></label>
                    <input asp-for="FormContacto.Name" class="form-control" />
                </div>
                <div class="form-group">
                    <label asp-for="FormContacto.Email" class="control-label"></label>
                    <input asp-for="FormContacto.Email" class="form-control" />
                </div>
                <div class="form-group">
                    <label asp-for="FormContacto.Mesagge" class="control-label"></label>
                    <textarea asp-for="FormContacto.Mesagge" class="form-control"></textarea>
                </div>
                <div class="form-group">
                    <label asp-for="FormContacto.Contrasena" class="control-label"></label>
                    <textarea asp-for="FormContacto.Contrasena" class="form-control"></textarea>
                </div>
                <div class="form-group text-center">
                    <button type="submit" class="btn btn-primary">Enviar</button>
                </div>
            </form>
            <h1>@ViewData["Message"]</h1>
            <div>
                <a asp-action="Index">Volver al inicio</a>
            </div>
            <div class="col-md-6">
                <table>
                    <th>
                        <td>
                            Email
                        </td>
                        <td>
                            Mesagge
                        </td>
                    </th>
                    @foreach (var item in Model.ListContactos)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.Email)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Mesagge)
                            </td>
                        </tr>
                    }
                </table>
            </div>
        </div>
</div>